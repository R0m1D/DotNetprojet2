@using P2FixAnAppDotNetCode.Models
@model IEnumerable<P2FixAnAppDotNetCode.Models.Product>
@{
    ViewData["Title"] = Localizer["ProductList"];
}

<br/>
<div id="panel-body">
    <table class="table table-bordered table-striped table-sm">
        <thead>
            <tr>
                <th>
                    <label>@Localizer["Name"]</label>
                </th>
                <th>
                    <label>@Localizer["Description"]</label>
                </th>
                <th>
                    <label>@Localizer["Price"]</label>
                </th>
                <th>
                    <label>@Localizer["Stock"]</label>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product p in Model)
{
    <tr>
    <td>@p.Name</td>
    <td>@p.Description</td>
    <td style="text-align:center">@p.Price.ToString("c")</td>
    <td style="text-align:center">@p.Stock</td>
    <td>
        <form id="@p.Id" asp-action="AddToCart" asp-controller="Cart" method="post">
            <input type="hidden" name="id" value="@p.Id" />

            <!-- Show the Add to Cart button only if there's no stock error -->
            @if (TempData[$"ErrorNoStock_{p.Id}"] == null)
            {
                <button type="submit" class="btn btn-primary">
                    @Localizer["AddToCart"]
                </button>
            }

            <!-- Show error message if stock error exists -->
            @if (TempData[$"ErrorNoStock_{p.Id}"] != null)
            {
                <div class="alert alert-danger mt-2">
                    @TempData[$"ErrorNoStock_{p.Id}"]
                </div>
            }
        </form>
    </td>
</tr>

}
        </tbody>
    </table>
</div>
